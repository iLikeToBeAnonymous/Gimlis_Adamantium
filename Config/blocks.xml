<config>
	<append xpath="/blocks">

		<block name="adamantiumBlock">
			<property name="Material" value="Mbedrock"/> <!--Pulls from the master game materials.xml file-->
			<property name="Texture" value="191"/> <!-- Changes the texture to the same tex used for SS blocks -->

			<property name="CustomIcon" value="stainlessSteelBlock"/> <!-- Just the name of the png in the game's "ItemIcons" folder -->
			<property name="CustomIconTint" value="33ccff"/> <!-- Tints the icon so it looks a little different from the ss plate icon -->
			
			<property name="SortOrder2" value="0150"/> 
			<property name="DowngradeBlock" value="rConcretePlate"/>
			<drop event="Fall" count="0" prob="0"/>
			
			<property name="FilterTags" value="fbuilding,fother"/>
			<property name="DescriptionKey" value="adamantiumBlockDesc"/><!--As of Alpha 18.4, these don't transmit from the server-->

			<drop event="Harvest" name="resourceScrapIron" count="400" prob="1" tag="allHarvest"/>
			<drop event="Harvest" name="resourceWood" count="400" prob="1" tag="allHarvest"/>
			<drop event="Destroy" count="0"/>
			<drop event="Harvest" name="terrStone" count="0" tool_category="Disassemble"/>
			<drop event="Destroy" name="resourceSpring" count="4,12" prob="1" tag="salvageHarvest"/>
			<drop event="Destroy" name="resourceMechanicalParts" count="4,20" prob="1" tag="salvageHarvest"/>
			<drop event="Fall" name="scrapMetalPile" count="1" prob="0.75" stick_chance="1"/>

			<property name="Group" value="Building,advBuilding,Basics"/>
			<property name="ActivationDistance" value="5"/><!-- This is how far away you can PLACE the block and how far away you can ACTIVATE it -->
			<property name="CanPickup" value="true"> <!-- So you can pick it up since you can't destroy it -->
				<property name="TakeDelay" value="5"/> <!-- Doesn't work. Must experiment more to figure out why. -->
			</property>
			<property name="forge_category" value="MAdamantium"/><!-- Not implemented yet -->

		</block>

		<block name="adamantiumPlate">
			<property name="Extends" value="adamantiumBlock"/>
 
			<property name="Shape" value="New"/>
			<property name="Model" value="Plate"/>

			<property name="CustomIcon" value="stainlessSteelPlate"/>
			<property name="CustomIconTint" value="33ccff"/> <!-- Tints the icon so it looks a little different from the ss plate icon -->
			
			<property name="TakeDelay" value="5"/> <!-- Doesn't do anything for now. -->

		</block>

		<!-- Based on post by Clockwork Orange @ https://community.7daystodie.com/topic/9304-adding-custom-workstations/-->
		<block name="[FF8C00]workstationResearchTable[-]">
			<property name="Class" value="Workstation"/>


			<property name="Material" value="Mwood_weak"/>
			<property name="MaxDamage" value="800"/>

			<property name="StabilitySupport" value="false"/>

			<property name="CustomIcon" value="cntToolBoxClosed"/>

			<property name="Shape" value="ModelEntity"/>
			<property name="Model" value="#Entities/LootContainers?metalToolBoxEmptyPrefab.prefab"/>

			<property name="ImposterDontBlock" value="true"/>
			<property name="Place" value="TowardsPlacerInverted"/>
			<property name="OnlySimpleRotations" value="true"/>
			<property name="IsTerrainDecoration" value="true"/>
			<property name="HeatMapStrength" value="0.5"/>
			<property name="HeatMapTime" value="1200"/>
			<property name="HeatMapFrequency" value="25"/>
			<property name="Stacknumber" value="1"/>
			<property class="Workstation">
				<property name="Modules" value="tools,output"/>
				<property name="CraftingAreaRecipes" value="player,workbench"/>
			</property>
			<property name="WorkstationIcon" value="ui_game_symbol_workbench" />
			<property name="OpenSound" value="open_cardboard" />
			<property name="CloseSound" value="close_cardboard" />
			<property class="RepairItems">
				<property name="resourceWood" value="10"/>
			</property>
			<drop event="Harvest" name="workstationResearchTable" count="1" tool_category="Disassemble"/>
			<drop event="Destroy" name="workstationResearchTable" count="1" tag="salvageHarvest"/>
			<drop event="Fall" name="terrDestroyedWoodDebris" count="1" prob="0.75" stick_chance="1"/>
			<property name="TakeDelay" value="7"/>
			<property name="DescriptionKey" value="workstationResearchTableDesc"/>
			<property name="EconomicValue" value="776"/>
			<property name="Group" value="Building,Science"/>
			<property name="FilterTags" value="fdecor,fother,ffurniture"/>
			<property name="SortOrder1" value="70i0"/>

			<property class="UpgradeBlock"> <!-- This doesn't work for some reason??? Look into the ability to "take" a vehicle in the windows.xml file-->
				<property name="ToBlock" value="cntMunitionsBox"/>
				<property name="resourceWood"/>
				<property name="ItemCount" value="1"/>
				<property name="UpgradeHitCount" value="4"/>
			</property>
		</block>

		<block name="keystoneBlockPortableGMLI"> <!-- Smaller, portable landclaim block to turn anywhere into your home.-->
			<property name="Extends" value="keystoneBlock"/>
			<property name="Group" value="Building,advBuilding"/>
			<property name="FilterTags" value="fbuilding"/>

			<property name="Material" value="MCardboardLoot"/>
			<property name="MaxDamage" value="20"/> <!-- Should be in materials, but I could do it in one line here. -->

			<property name="CustomIcon" value="keystoneBlock"/><property name="CustomIconTint" value="33ccff"/>
			<property name="DescriptionKey" value="keystoneBlockPortableGMLIDesc"/>

			<property name="Shape" value="New"/>
			<property name="Model" value="cube_eighth"/>
			<property name="Texture" value="176"/> <!-- Went with "wet cement", but would like to have the correct texture on this. -->

			<property name="Stacknumber" value="1"/>
			<property name="TakeDelay" value="7"/>

			<property class="RepairItems"> <property name="resourceRockSmall" value="1"/> </property>
			<drop event="Destroy" name="keystoneBlockPortableGMLI" count="1"/>
		</block>

	</append>

</config>
